<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DriverLogin">

    <TextView
        android:id="@+id/driverText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="392dp"
        android:gravity="center"
        android:text="Driver Login"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/driverLoginEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/driverText"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="Email"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/driverLoginPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverText" />

    <EditText
        android:id="@+id/driverLoginPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/driverLoginEmail"
        android:layout_marginBottom="29dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="Password"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/driverLoginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverLoginEmail" />

    <Button
        android:id="@+id/driverLoginBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverLoginPassword"
        android:layout_marginBottom="215dp"
        android:background="@drawable/button_border"
        android:shadowRadius="@integer/material_motion_duration_medium_2"
        android:text="Login"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverLoginPassword"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/driverIpAddress"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_marginBottom="68dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverText" />

</androidx.constraintlayout.widget.ConstraintLayout>