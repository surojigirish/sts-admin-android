<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".AdminLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/driverText"
        android:text="Driver Registration"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:id="@+id/driverName"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="55dp"
        android:layout_below="@id/driverText"
        android:drawableLeft="@drawable/baseline_person_24"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:id="@+id/driverEmail"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/driverName"
        android:drawableLeft="@drawable/baseline_email_24"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="UserName"
        android:id="@+id/driverUsername"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/driverEmail"
        android:drawableLeft="@drawable/baseline_person_pin_24"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:id="@+id/driverPassword"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/driverUsername"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/driverRegBtn"
        android:text="Register"
        android:layout_below="@id/driverPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="@drawable/button_border"
        android:shadowRadius="@integer/material_motion_duration_medium_2"/>
</RelativeLayout>