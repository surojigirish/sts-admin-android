<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".activity.AdminLogin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driverText"
                android:text="Driver Registration"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="First Name"
                android:id="@+id/driverName"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="55dp"
                android:layout_below="@id/driverText"
                android:drawableLeft="@drawable/baseline_person_24"
                android:padding="10dp"/>

            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:id="@+id/driverUsername"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/driverEmail"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:padding="10dp"/>

            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textCapCharacters"
                android:hint="License Number"
                android:id="@+id/et_driver_license"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/driverEmail"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:padding="10dp"/>

            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Contact"
                android:id="@+id/et_contact_number"
                android:layout_marginLeft="30dp"
                android:inputType="number"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/driverEmail"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:padding="10dp"/>
            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Gender"
                android:inputType="textCapWords"
                android:id="@+id/et_gender"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/et_contact_number"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:padding="10dp"/>

            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:id="@+id/driverEmail"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/driverName"
                android:drawableLeft="@drawable/baseline_email_24"
                android:padding="10dp"/>

            <EditText
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:id="@+id/driverPassword"
                android:inputType="textPassword"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_border"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/driverUsername"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:padding="10dp"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driverRegBtn"
                android:text="Register"
                android:layout_below="@id/driverPassword"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="@drawable/button_border"
                android:shadowRadius="@integer/material_motion_duration_medium_2"/>


            <Button
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driverDetailsBtn"
                android:text="Driver Details"
                android:layout_below="@id/driverPassword"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/button_border"
                android:shadowRadius="@integer/material_motion_duration_medium_2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>