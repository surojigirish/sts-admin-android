<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Place your bus schedule information views inside the CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDateOfSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvBusNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bus No."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvBusType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bus Type"
                android:textSize="16sp" />

            <!-- Placeholder for Departure details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeparture"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Departure : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDepartureBusStand"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Margao"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="08:00 AM"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Placeholder for Departure details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvArrival"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Arrival :"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvArrivalBusStand"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Panjim"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="08:45 AM"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSeatsAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seats Available"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>