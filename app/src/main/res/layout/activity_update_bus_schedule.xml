<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateBusSchedule">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateText"
        android:text="Update Schedule"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Schedule_ID"
        android:id="@+id/schedule"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="55dp"
        android:layout_below="@id/updateText"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="departure_at"
        android:id="@+id/departure"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/schedule"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="arrive_at"
        android:id="@+id/arrive"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/departure"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="duration"
        android:id="@+id/duration"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/arrive"
        android:padding="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="route_at"
        android:id="@+id/route"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_border"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/duration"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateButton"
        android:text="Update"
        android:layout_below="@id/route"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="@drawable/button_border"
        android:shadowRadius="@integer/material_motion_duration_medium_2"/>
</RelativeLayout>